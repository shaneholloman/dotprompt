{
  "name": "dotprompt-vscode",
  "displayName": "Dotprompt",
  "description": "Syntax highlighting, LSP diagnostics, formatting, and code snippets for Dotprompt (.prompt) files",
  "version": "0.1.0",
  "publisher": "google",
  "license": "Apache-2.0",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/dotprompt.git",
    "directory": "packages/vscode"
  },
  "bugs": {
    "url": "https://github.com/google/dotprompt/issues"
  },
  "homepage": "https://github.com/google/dotprompt/tree/main/packages/vscode#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "dotprompt",
    "prompt",
    "llm",
    "ai",
    "genai",
    "gemini",
    "handlebars",
    "template",
    "genkit"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:dotprompt"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsup src/extension.ts --format cjs --external vscode --sourcemap",
    "watch": "tsup src/extension.ts --format cjs --external vscode --sourcemap --watch",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-no-dotenv": "^11.3.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.7.1",
    "secretlint": "^11.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "dotprompt",
        "aliases": [
          "Dotprompt",
          "dotprompt"
        ],
        "extensions": [
          ".prompt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dotprompt",
        "scopeName": "source.dotprompt",
        "path": "./syntaxes/dotprompt.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "dotprompt",
        "path": "./snippets/dotprompt.snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Dotprompt",
      "properties": {
        "dotprompt.promptlyPath": {
          "type": "string",
          "default": "",
          "description": "Path to the promptly binary. If not set, the extension will search in PATH and common locations."
        },
        "dotprompt.enableLsp": {
          "type": "boolean",
          "default": true,
          "description": "Enable LSP features (diagnostics, formatting, hover). Requires promptly to be installed."
        }
      }
    }
  }
}
