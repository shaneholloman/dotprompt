{
  "name": "@dotprompt/monaco",
  "version": "0.1.0",
  "description": "Monaco Editor language support for Dotprompt (.prompt) files",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check . && tsc --noEmit",
    "format": "biome check --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/google/dotprompt.git",
    "directory": "packages/monaco"
  },
  "keywords": [
    "monaco",
    "editor",
    "dotprompt",
    "prompt",
    "llm",
    "syntax-highlighting",
    "genkit"
  ],
  "author": "Google",
  "license": "Apache-2.0",
  "peerDependencies": {
    "monaco-editor": ">=0.40.0"
  },
  "devDependencies": {
    "monaco-editor": "^0.52.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "@biomejs/biome": "^1.5.0"
  }
}
