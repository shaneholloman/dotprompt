<idea-plugin>
    <id>com.google.dotprompt</id>
    <name>Dotprompt</name>
    <vendor email="dotprompt@google.com" url="https://github.com/google/dotprompt">Google</vendor>

    <description><![CDATA[
    <p>Language support for Dotprompt (.prompt) files.</p>

    <h3>Features</h3>
    <ul>
        <li>Syntax highlighting for YAML frontmatter and Handlebars templates</li>
        <li>Real-time diagnostics via LSP (requires <code>promptly</code>)</li>
        <li>Document formatting</li>
        <li>Hover documentation for helpers and frontmatter fields</li>
    </ul>

    <h3>Installation</h3>
    <p>For full LSP features, install the <code>promptly</code> CLI:</p>
    <pre>cargo install --path rs/promptly</pre>
    ]]></description>

    <change-notes><![CDATA[
    <h3>0.1.0</h3>
    <ul>
        <li>Initial release</li>
        <li>Syntax highlighting</li>
        <li>LSP integration via LSP4IJ</li>
    </ul>
    ]]></change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.redhat.devtools.lsp4ij</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File type registration -->
        <fileType
                name="Dotprompt"
                implementationClass="com.google.dotprompt.DotpromptFileType"
                fieldName="INSTANCE"
                language="Dotprompt"
                extensions="prompt"/>

        <!-- Language definition -->
        <lang.parserDefinition
                language="Dotprompt"
                implementationClass="com.google.dotprompt.DotpromptParserDefinition"/>

        <!-- Syntax highlighter -->
        <lang.syntaxHighlighterFactory
                language="Dotprompt"
                implementationClass="com.google.dotprompt.DotpromptSyntaxHighlighterFactory"/>

        <!-- Commenter -->
        <lang.commenter
                language="Dotprompt"
                implementationClass="com.google.dotprompt.DotpromptCommenter"/>
    </extensions>

    <!-- LSP4IJ server definition -->
    <extensions defaultExtensionNs="com.redhat.devtools.lsp4ij">
        <server id="promptly"
                name="Promptly"
                factoryClass="com.google.dotprompt.PromptlyServerFactory">
            <description><![CDATA[
            Promptly LSP server for Dotprompt files.
            Provides diagnostics, formatting, and hover documentation.
            ]]></description>
        </server>
        <languageMapping language="Dotprompt" serverId="promptly"/>
    </extensions>
</idea-plugin>
