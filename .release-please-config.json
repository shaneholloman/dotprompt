      "component": "dotprompt-rs",
      "extra-files": [
        {
          "type": "toml",
          "path": "dotprompt/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "smoke/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "generic",
          "path": "../README.md",
          "glob": false
        }
      ]
    },
    "java": {
