{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "draft": false,
  "prerelease": false,
  "include-component-in-tag": true,
  "include-v-in-tag": false,
  "pull-request-title-pattern": "chore(release): ${component} ${version}",
  "separate-pull-requests": true,
  "skip-github-release": false,
  "plugins": ["node-workspace"],
  "packages": {
    "js": {
      "release-type": "node",
      "component": "dotprompt"
    },
    "python/dotpromptz": {
      "release-type": "python",
      "package-name": "dotpromptz",
      "component": "dotpromptz",
      "extra-files": [
        {
          "type": "toml",
          "path": "pyproject.toml",
          "jsonpath": "$.project.version"
        },
        {
          "type": "toml",
          "path": "tests/smoke/pyproject.toml",
          "jsonpath": "$.project.version"
        }
      ]
    },
    "python/handlebarrz": {
      "release-type": "python",
      "package-name": "dotpromptz-handlebars",
      "component": "dotpromptz-handlebars",
      "extra-files": [
        {
          "type": "toml",
          "path": "pyproject.toml",
          "jsonpath": "$.project.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.package.version"
        },
        {
          "type": "toml",
          "path": "smoke_tests/pyproject.toml",
          "jsonpath": "$.project.version"
        }
      ]
    },
    "go": {
      "release-type": "go",
      "component": "dotprompt-go"
    },
    "rs": {
      "release-type": "rust",
      "component": "dotprompt-rs",
      "extra-files": [
        {
          "type": "toml",
          "path": "smoke/Cargo.toml",
          "jsonpath": "$.package.version"
        }
      ]
    },
    "java": {
      "release-type": "simple",
      "component": "dotprompt-java"
    },
    "packages/vscode": {
      "release-type": "node",
      "component": "dotprompt-vscode"
    },
    "packages/vim": {
      "release-type": "simple",
      "component": "dotprompt-vim"
    },
    "packages/emacs": {
      "release-type": "simple",
      "component": "dotprompt-emacs"
    },
    "packages/monaco": {
      "release-type": "node",
      "component": "dotprompt-monaco"
    },
    "packages/codemirror": {
      "release-type": "node",
      "component": "dotprompt-codemirror"
    },
    "packages/jetbrains": {
      "release-type": "simple",
      "component": "dotprompt-jetbrains"
    },
    "packages/treesitter": {
      "release-type": "node",
      "component": "tree-sitter-dotprompt"
    },
    "packages/promptly": {
      "release-type": "node",
      "component": "promptly"
    }
  }
}
