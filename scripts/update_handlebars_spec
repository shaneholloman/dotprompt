# Downloads the official Handlebars grammar files from handlebars-lang/handlebars.js.
# These files are MIT licensed.
#
# Source: https://github.com/handlebars-lang/handlebars.js (MIT License)

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
SPEC_DIR="${REPO_ROOT}/spec/handlebars"

BASE_URL="https://raw.githubusercontent.com/handlebars-lang/handlebars.js/4.x/src"

echo "Updating Handlebars grammar files from ${BASE_URL}..."
echo "License: MIT (Copyright 2011-2019 Yehuda Katz)"
echo ""

mkdir -p "${SPEC_DIR}"

echo "  Downloading handlebars.yy (parser grammar)..."
curl -sL "${BASE_URL}/handlebars.yy" -o "${SPEC_DIR}/handlebars.yy"

echo "  Downloading handlebars.l (lexer grammar)..."
curl -sL "${BASE_URL}/handlebars.l" -o "${SPEC_DIR}/handlebars.l"

echo ""
echo "Downloaded grammar files to ${SPEC_DIR}"
echo ""
echo "Files updated:"
ls -la "${SPEC_DIR}"/*.{yy,l} 2>/dev/null | awk '{print "  " $NF " (" $5 " bytes)"}'
