set -euo pipefail

if ((EUID == 0)); then
  echo "Please do not run as root"
  exit 1
fi

TOP_DIR=$(git rev-parse --show-toplevel)
PY_DIR="${TOP_DIR}/python"

# Validate release-please configuration
"${TOP_DIR}/scripts/validate_release_please_config"

uv run --directory "${PY_DIR}" ruff check --select I --fix --preview --unsafe-fixes .

# Static type checking with ty (Astral/Ruff) and pyrefly (Meta).
# Both must pass with zero errors.
uv run --directory "${PY_DIR}" ty check
uv run --directory "${PY_DIR}" pyrefly check

# Run security scanning
"${TOP_DIR}/scripts/run_python_security_checks"

echo "Running Dart checks..."
for pkg in dotprompt handlebarrz; do
  echo "Checking dart/$pkg..."
  (cd "${TOP_DIR}/dart/$pkg" && dart analyze --fatal-infos --fatal-warnings)
done
