# Runs all Dart checks (analyze, format, test)
# Usage: ./scripts/run_dart_checks
#
# This script runs the same checks as CI to ensure code quality locally.

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
DART_DIR="$REPO_ROOT/dart/dotprompt"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "========================================"
echo "Running Dart checks"
echo "========================================"

# Check if Dart is available
if ! command -v dart &> /dev/null; then
    echo -e "${RED}Error: Dart is not installed or not in PATH${NC}"
    echo "Install Dart SDK from https://dart.dev/get-dart"
    exit 1
fi

echo -e "${YELLOW}Dart version:${NC}"
dart --version
echo ""

cd "$DART_DIR"

# Step 1: Get dependencies
echo -e "${YELLOW}Step 1/4: Getting dependencies...${NC}"
dart pub get
echo ""

# Step 2: Check formatting
echo -e "${YELLOW}Step 2/4: Checking formatting...${NC}"
if ! dart format --set-exit-if-changed --output=none .; then
    echo -e "${RED}Formatting issues found. Run 'dart format .' to fix.${NC}"
    exit 1
fi
echo -e "${GREEN}✓ Formatting OK${NC}"
echo ""

# Step 3: Static analysis
echo -e "${YELLOW}Step 3/4: Running static analysis...${NC}"
if ! dart analyze --fatal-infos --fatal-warnings; then
    echo -e "${RED}Static analysis failed.${NC}"
    exit 1
fi
echo -e "${GREEN}✓ Analysis OK${NC}"
echo ""

# Step 4: Run tests
echo -e "${YELLOW}Step 4/4: Running tests...${NC}"
if ! dart test; then
    echo -e "${RED}Tests failed.${NC}"
    exit 1
fi
echo -e "${GREEN}✓ Tests OK${NC}"
echo ""

echo "========================================"
echo -e "${GREEN}All Dart checks passed!${NC}"
echo "========================================"
