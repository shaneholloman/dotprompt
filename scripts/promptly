# Wrapper script to run promptly via Bazel.
# Usage: scripts/promptly [args...]
#
# Examples:
#   scripts/promptly --help
#   scripts/promptly check examples/
#   scripts/promptly fmt --check .
#   scripts/promptly lsp

set -euo pipefail

# Convert relative paths in arguments to absolute paths
# This is needed because `bazel run` changes the working directory
args=()
for arg in "$@"; do
  # Check if the argument looks like a path (contains / or is . or ..)
  if [[ -e "$arg" ]]; then
    # Convert to absolute path if it exists
    args+=("$(cd "$(dirname "$arg")" && pwd)/$(basename "$arg")")
  else
    args+=("$arg")
  fi
done

exec bazel run //rs/promptly:promptly -- "${args[@]}"

